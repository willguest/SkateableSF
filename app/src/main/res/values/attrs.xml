<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="myTextView" format="string" />
    <attr name="myTextColor" format="color" />
    <attr name="myTextSize" format="dimension" />


    <declare-styleable name="MyTextView">
        <attr name="myTextView" />
        <attr name="myTextColor" />
        <attr name="myTextSize" />
    </declare-styleable>


    <declare-styleable name="color_picker">

        <!-- 背景圆的半径 -->
        <attr name="circle_radius" format="dimension" />
        <!-- 可滑动小球的半径 -->
        <attr name="center_radius" format="dimension" />
        <!-- 可滑动小球的颜色 -->
        <attr name="center_color" format="color" />

    </declare-styleable>
</resources>